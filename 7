public class TwoThreads implements Runnable {
    private String threadName;
    private int runCount;

    public TwoThreads(String name, int count) {
        this.threadName = name;
        this.runCount = count;
    }

    public void run() {
        for (int i = 0; i < runCount; i++) {
            System.out.println(threadName + " is running...");
            
            try {
                if (threadName.equals("Thread 1")) {
                    Thread.sleep(1000); // Sleep for 1 second
                } else if (threadName.equals("Thread 2")) {
                    Thread.sleep(2500); // Sleep for 2.5 seconds
                }
            } catch (InterruptedException e) {
                e.printStackTrace();
            }
        }
    }

    public static void main(String[] args) {
        // Create threads
        Thread thread1 = new Thread(new TwoThreads("Thread 1", 10));
        Thread thread2 = new Thread(new TwoThreads("Thread 2", 10));

        // Start the threads
        thread1.start();
        thread2.start();
    }
}

