public class Add implements Runnable {
    private int n;
    private int sum = 0;

    public Add(int a) {
        n = a;
    }

    public void run() {
        for (int i = 1; i <= n; i++) {
            sum += i;
        }
        System.out.println("Sum for n=" + n + ": " + sum);
    }

    public static void main(String[] args) {
        // Create threads to calculate sums for different values of n
        Thread thread1 = new Thread(new Add(5));
        Thread thread2 = new Thread(new Add(10));

        // Start the threads
        thread1.start();
        thread2.start();
    }
}

